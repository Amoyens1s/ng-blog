{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@test/test/(.*)": "<rootDir>/../libs/test/src/$1",
    "@test/test": "<rootDir>/../libs/test/src",
    "@tools/tools/(.*)": "<rootDir>/../libs/tools/src/$1",
    "@tools/tools": "<rootDir>/../libs/tools/src"
  }
}